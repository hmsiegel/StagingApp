<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="PrimaryStackPanelStyle" TargetType="StackPanel" />

    <!-- Stack Panel Style -->
    <Style TargetType="StackPanel" x:Key="ConfigureStackPanelStyle" >
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>

    <Style TargetType="StackPanel" x:Key="InfoRowStackPanelStyle">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Grid.ColumnSpan" Value="4" />
    </Style>

    <Style TargetType="StackPanel" x:Key="ServerConfigureStackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Margin" Value="0 5 25 0" />
    </Style>

</ResourceDictionary>