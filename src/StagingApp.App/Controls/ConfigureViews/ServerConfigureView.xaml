<UserControl
    x:Class="StagingApp.Main.Controls.ConfigureViews.ServerConfigureView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewmodels="clr-namespace:StagingApp.Presentation.ViewModels.ConfigureViewModels;assembly=StagingApp.Presentation"
    d:DataContext="{d:DesignInstance Type=viewmodels:ServerConfigureViewModel}"
    mc:Ignorable="d" 
    d:DesignHeight="550"
    d:DesignWidth="800"
    Background="{StaticResource BackgroundColor}">

    <Grid Style="{StaticResource GridStyle}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Instructions Row -->
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Style="{StaticResource ConfigureLabelHeaderStyle}">
            PLEASE ENTER THE FOLLOWING INFORMATION:
        </Label>

        <!-- Site ID Row -->
        <StackPanel 
            Style="{StaticResource ConfigureStackPanelStyle}"
            Grid.Row="2"
            Grid.Column="1">
                <Label
                    Style="{StaticResource ConfigureLabelStyle}">
                    SITE ID:
                </Label>
                <ComboBox
                    ItemsSource="{Binding SiteIds}"
                    SelectedItem="{Binding SelectedSiteId}"
                    Style="{StaticResource ServerConfigureComboBoxStyle}" />
        </StackPanel>

        <!-- Staging Tech Name Row -->
        <StackPanel
            Style="{StaticResource ConfigureStackPanelStyle}"
            Grid.Row="3"
            Grid.Column="1">
                <Label
                    Style="{StaticResource ConfigureLabelStyle}">
                    STAGING TECH NAME:
                </Label>
                <TextBox
                    Text="{Binding StagingTechName}"
                    Style="{StaticResource ServerConfigureTextBox}" />
        </StackPanel>

        <!-- Hard Drive Replacement Row -->
        <StackPanel
            Style="{StaticResource ConfigureStackPanelStyle}"
            Grid.Row="4"
            Grid.Column="1">
                <Label
                    Style="{StaticResource ConfigureLabelStyle}">
                    HARD DRIVE REPLACEMENT:
                </Label>
                <ComboBox
                    ItemsSource="{Binding ReplacementSelectionsList}"
                    SelectedItem="{Binding Path=SelectedHardDriveReplacement}"
                    IsEditable="False"
                    Style="{StaticResource ServerConfigureComboBoxStyle}" />
        </StackPanel>

        <!-- Hard Drive Replacement Letter Row -->
        <StackPanel
            Style="{StaticResource ConfigureStackPanelStyle}"
            Grid.Row="5"
            Grid.Column="1"
            Visibility="{Binding IsHardDriveLetterVisible, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
            <Label
                    Style="{StaticResource ConfigureLabelStyle}">
                    HARD DRIVE LETTER:
                </Label>
                <ComboBox
                    ItemsSource="{Binding HardDriveLettersList}"
                    SelectedItem="{Binding SelectedHardDriveLetter}"
                    Style="{StaticResource ServerConfigureComboBoxStyle}" />
        </StackPanel>

        <!-- Button Row -->
        <Button
            Command="{Binding ConfigureCommand}"
            Grid.Column="1"
            Grid.Row="6"
            Style="{StaticResource ConfigureButton}" >
            CONFIGURE
        </Button>
    </Grid>

</UserControl>
